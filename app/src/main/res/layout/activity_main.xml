<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="3"
        android:background="#fff">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            >

            <Button
                android:id="@+id/btn1"
                android:text="@string/move1"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#FF9800"
                android:textSize="120sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btn2"
                android:text="@string/move2"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#FF9800"
                android:textSize="120sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btn3"
                android:text="@string/move3"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#FF9800"
                android:textSize="120sp"
                android:textStyle="bold"
                />

        </TableRow>

        <!-- divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            >

            <Button
                android:id="@+id/btn4"
                android:text="@string/move4"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#FF9800"
                android:textSize="120sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btn5"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/move5"
                android:textColor="#FF9800"
                android:textSize="120sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn6"
                android:text="@string/move6"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#FF9800"
                android:textSize="120sp"
                android:textStyle="bold"
                />

        </TableRow>

        <!-- divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            >

            <Button
                android:id="@+id/btn7"
                android:text="@string/move7"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#FF9800"
                android:textSize="120sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btn8"
                android:text="@string/move8"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#FF9800"
                android:textSize="120sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btn9"
                android:text="@string/move9"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#FF9800"
                android:textSize="120sp"
                android:textStyle="bold"
                />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>